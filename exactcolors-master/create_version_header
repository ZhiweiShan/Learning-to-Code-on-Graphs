git log --pretty=format:"%H" -1 | awk '
BEGIN{
   print "#ifndef __COLOR_VERSION_H";
   print "#define __COLOR_VERSION_H";
   version_str = "unknown";
}
{
      version_str = $1;
}
END{
   print "static const char* color_verion_string = \""version_str"\";";

   print "#endif";
}
'
